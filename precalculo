    <div class="navigation">
        <button class="nav-btn" id="prevBtn" onclick="changeSlide(-1)">‚¨Ö Anterior</button>
        <button class="nav-btn" id="nextBtn" onclick="changeSlide(1)">Pr√≥ximo ‚û°</button>
    </div>
    
    <script>
        let currentSlideIndex = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        
        document.getElementById('totalSlides').textContent = totalSlides;
        
        function showSlide(index) {
            slides.forEach(slide => slide.classList.remove('active'));
            slides[index].classList.add('active');
            
            document.getElementById('currentSlide').textContent = index + 1;
            
            // Update navigation buttons
            document.getElementById('prevBtn').disabled = index === 0;
            document.getElementById('nextBtn').disabled = index === totalSlides - 1;
            
            // Initialize charts when reaching chart slides
            if (index === 2) {
                setTimeout(initScatterChart, 100);
            } else if (index === 6) {
                setTimeout(initFunctionChart, 100);
            }
        }
        
        function changeSlide(direction) {
            const newIndex = currentSlideIndex + direction;
            if (newIndex >= 0 && newIndex < totalSlides) {
                currentSlideIndex = newIndex;
                showSlide(currentSlideIndex);
            }
        }
        
        // Keyboard navigation
        document.addEventListener('keydown', function(event) {
            if (event.key === 'ArrowLeft') {
                changeSlide(-1);
            } else if (event.key === 'ArrowRight') {
                changeSlide(1);
            }
        });
        
        // Initialize
        showSlide(0);
        
        // Chart data
        const originalData = [
            {x: 0, y: -5},
            {x: 2, y: 27},
            {x: 4, y: 43},
            {x: 6, y: 43},
            {x: 10, y: -5}
        ];
        
        function quadraticFunction(L) {
            return -2 * L * L + 20 * L - 5;
        }
        
        const curveData = [];
        for (let L = 0; L <= 10; L += 0.1) {
            curveData.push({x: L, y: quadraticFunction(L)});
        }
        
        function initScatterChart() {
            const ctx = document.getElementById('scatterChart');
            if (!ctx) return;
            
            new Chart(ctx.getContext('2d'), {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Pontos de Dados',
                        data: originalData,
                        backgroundColor: '#e53e3e',
                        borderColor: '#c53030',
                        pointRadius: 12,
                        pointHoverRadius: 15
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Pontos Originais: Lucro vs Pre√ßo',
                            font: { size: 18, weight: 'bold' }
                        },
                        legend: {
                            display: true,
                            labels: { font: { size: 14 } }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Lucro Total (R$)',
                                font: { size: 16, weight: 'bold' }
                            },
                            grid: { color: '#e2e8f0' }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Pre√ßo do Produto (R$)',
                                font: { size: 16, weight: 'bold' }
                            },
                            grid: { color: '#e2e8f0' }
                        }
                    }
                }
            });
        }
        
        function initFunctionChart() {
            const ctx = document.getElementById('functionChart');
            if (!ctx) return;
            
            new Chart(ctx.getContext('2d'), {
                type: 'scatter',
                data: {
                    datasets: [
                        {
                            label: 'Pontos Originais',
                            data: originalData,
                            backgroundColor: '#e53e3e',
                            borderColor: '#c53030',
                            pointRadius: 10,
                            type: 'scatter'
                        },
                        {
                            label: 'p = -2L¬≤ + 20L - 5',
                            data: curveData,
                            borderColor: '#3182ce',
                            backgroundColor: 'rgba(49, 130, 206, 0.1)',
                            pointRadius: 0,
                            borderWidth: 4,
                            type: 'line',
                            tension: 0
                        },
                        {
                            label: 'Ponto √ìtimo (L=5, P=45)',
                            data: [{x: 5, y: 45}],
                            backgroundColor: '#48bb78',
                            borderColor: '#38a169',
                            pointRadius: 15,
                            pointStyle: 'star',
                            type: 'scatter'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Fun√ß√£o Quadr√°tica Completa',
                            font: { size: 18, weight: 'bold' }
                        },
                        legend: {
                            display: true,
                            labels: { font: { size: 14 } }
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Lucro Total (R$)',
                                font: { size: 16, weight: 'bold' }
                            },
                            grid: { color: '#e2e8f0' }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Pre√ßo do Produto (R$)',
                                font: { size: 16, weight: 'bold' }
                            },
                            grid: { color: '#e2e8f0' }
                        }
                    }
                }
            });
        }
    </script>
